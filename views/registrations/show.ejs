<div class="row">
  <div class="col-lg-6 col-sm-12 mx-auto">
    <h4>Username: <span class="profile-text"><%= user.username %></span></h1>
    <h4>First Name: <span class="profile-text"><%= user.firstname %></span></h4>
    <h4>Last Name: <span class="profile-text"><%= user.lastname %></span></h4>
    <h4>Email Address: <span class="profile-text"><%= user.email %></span></h4>
    <div class="submitted-websites">
    <h4>Submitted Websites: </h4>
    <% website.forEach((website) => { %>
      <% if (`${website.createdBy}` === `${user.id}`) { %>
        <div class="edit-submissions">
        <a href="/websites/<%= website.id %>"><p><%= website.name %></p></a>
        <a href="/websites/<%= website.id %>/edit"><button class="btn btn-tertiary">Edit Website</button></a>
        </div>
      <% } %>
    <% }); %>
    </div>

    <div class="btn-group">
      <a href="/profile/<%= user.id %>/edit"><button class="btn btn-secondary">Edit Profile</button></a>
      <form method="POST" action="/profile/<%= user.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger">Delete Profile</button>
      </form>
    </div>
  </div>
</div>
