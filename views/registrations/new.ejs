<% if (locals.message) { %>
  <p><%= message %></p>
<% } %>
<div class="container">
  <div class="row">
<form method="POST" action="/register" class="col-lg-6 col-sm-12 mx-auto">
  <div class="form-field">
    <label for="firstname">First Name</label>
    <input type="text" name="firstname" id="firstname" class="input-field" autofocus>
  </div>
  <div class="form-field">
    <label for="lastname">Last Name</label>
    <input type="text" name="lastname" id="lastname" class="input-field">
  </div>
  <div class="form-field">
    <label for="email">Email Address</label>
    <input type="email" name="email" id="email" class="input-field">
  </div>
  <div class="form-field">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" class="input-field">
  </div>
  <div class="form-field">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="input-field">
  </div>
  <div class="form-field">
    <label for="passwordConfirmation">Password Confirmation</label>
    <input type="password" name="passwordConfirmation" id="passwordConfirmation" class="input-field">
  </div>

  <button class="btn btn-block btn-primary">Register</button>
</form>
</div>
</div>
