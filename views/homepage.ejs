<% if (locals.message) { %>
  <p><%= message %></p>
  <% } %>

<header></header>

  <main class="container-fluid">
    <div class="row">
    <% websites.forEach((website) => { %>
      <div class="website col-lg-4 col-md-6">
      <h1><a href="/websites/<%= website.id %>"><%= website.name %></a></h2>
      <h2><%= website.description %></h2>
      <a href="/websites/<%= website.id %>"><img class="img-fluid" src= <%= website.screenshotUrl %>></a>
      </div>
      <% }); %>
    </div>
  </main>
